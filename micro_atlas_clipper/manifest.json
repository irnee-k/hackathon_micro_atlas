{
    "manifest_version": 3,
    "name": "Micro-Atlas Web Clipper",
    "version": "1.0",
    "description": "Clip selected text from web pages to your Micro-Atlas.",
    "icons": {
      "16": "icons/icon16.png"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png"
      }
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "http://localhost:5001/",
      "*://*.ngrok-free.app/"
    ],
    "background": {
      "service_worker": "background.js"
    }
  }